denominator = 1
sum = 0
loop = 100000

for i in range 0 to loop 
    if i % 2 == 0:
        #even index add to sum
        sum += 4/denominator
    else
        #odd index subtract from sum
        sum -= 4/denominator
        #increment denominator by 2 
        denominator += 2
    end if
end for

print("Value of Pi is : ",sum)
